{
    "manifest_version": 3,
    "name": "Feedback System Alerts",
    "version": "1.0.0",
    "description": "Real-time notifications for customer feedback. Never miss a negative review!",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://*.railway.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Feedback Alerts"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}