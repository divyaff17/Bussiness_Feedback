# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update values

# JWT Secret (Generate a strong random string for production!)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Server Port
PORT=8080

# Supabase Configuration (Get from Supabase Dashboard > Settings > API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Frontend URL (CRITICAL for QR code generation)
# This is the URL where your frontend is deployed
# DEVELOPMENT: http://localhost:8000
# PRODUCTION: https://your-app.vercel.app
FRONTEND_URL=https://your-app.vercel.app

# SMTP (for Nodemailer, required for OTP/email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@email.com
SMTP_PASS=yourpassword
SMTP_FROM="Feedback System" <noreply@feedback.app>

# No Resend support. Only SMTP is used for all emails.
